<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:match="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/search_anim"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/loadanim" />

    <ImageView
        android:id="@+id/close_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/search_anim"
        android:layout_alignTop="@+id/search_anim"
        android:src="@drawable/bottle_close_frame_highlight"
        android:theme="@android:style/Theme.Translucent" />
    <!--
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在寻找有缘人"
        android:layout_alignBottom="@+id/search_anim"
        android:layout_centerHorizontal="true"
        />-->
    <!--不支持中文-->
    <com.roger.match.library.MatchTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        match:text="Searching..."
        match:textColor="#ffffff"
        match:textSize="10sp"
        android:layout_alignBottom="@+id/search_anim"
        android:layout_centerHorizontal="true" />

</RelativeLayout>